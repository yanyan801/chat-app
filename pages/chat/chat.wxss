/* pages/chat/chat.wxss */
page {
    height: 100%;
  }
  
  .chat-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #F9FAFB;
  }
  
  .messages-area {
    flex: 1;
    padding: 30rpx;
    box-sizing: border-box;
  }
  
  .empty-state {
    text-align: center;
    margin-top: 100rpx;
    color: #9CA3AF;
    font-size: 28rpx;
  }
  
  .empty-text {
    display: block;
    margin-bottom: 10rpx;
  }
  
  .message-row {
    display: flex;
    margin-bottom: 30rpx;
    align-items: flex-start;
  }
  
  .user-row {
    flex-direction: row-reverse;
  }
  
  .bot-row {
    flex-direction: row;
  }
  
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    flex-shrink: 0;
  }
  
  .user-avatar {
    background-color: #3B82F6;
    color: white;
    margin-left: 20rpx;
  }
  
  .bot-avatar {
    background-color: #8B4513;
    color: white;
    margin-right: 20rpx;
  }
  
  .bubble {
    max-width: 70%;
    padding: 20rpx 30rpx;
    border-radius: 30rpx;
    font-size: 30rpx;
    line-height: 1.5;
    position: relative;
  }
  
  .user-bubble {
    background-color: #3B82F6;
    color: white;
    border-top-right-radius: 4rpx;
  }
  
  .bot-bubble {
    background-color: white;
    color: #333;
    border-top-left-radius: 4rpx;
    border: 1rpx solid #E5E7EB;
  }
  
  .loading-bubble {
    color: #9CA3AF;
    font-style: italic;
    font-size: 26rpx;
  }
  
  .input-area {
    background-color: white;
    padding: 20rpx 30rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    border-top: 1rpx solid #E5E7EB;
  }
  
  .input-box {
    background-color: #F3F4F6;
    border-radius: 40rpx;
    padding: 10rpx 20rpx;
    display: flex;
    align-items: center;
  }
  
  .input {
    flex: 1;
    height: 70rpx;
    font-size: 30rpx;
    padding: 0 20rpx;
  }
  
  .send-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #D1D5DB;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    transition: all 0.3s;
  }
  
  .send-btn.active {
    background-color: #3B82F6;
  }