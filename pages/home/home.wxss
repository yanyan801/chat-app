/* pages/home/home.wxss */
.container {
    padding: 30rpx;
    display: block;
  }
  
  .hero {
    background: linear-gradient(135deg, #8B4513, #A0522D);
    border-radius: 30rpx;
    padding: 40rpx;
    color: white;
    position: relative;
    overflow: hidden;
    margin-bottom: 40rpx;
    box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.2);
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
  }
  
  .hero-title {
    font-size: 48rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .hero-subtitle {
    font-size: 28rpx;
    opacity: 0.9;
    display: block;
    margin-bottom: 30rpx;
  }
  
  .hero-btn {
    background: white;
    color: #8B4513;
    font-size: 28rpx;
    border-radius: 40rpx;
    display: inline-block;
    padding: 10rpx 30rpx;
    line-height: 2;
  }
  
  .hero-bg-circle {
    position: absolute;
    top: -40rpx;
    right: -40rpx;
    width: 200rpx;
    height: 200rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    filter: blur(20rpx);
  }
  
  .quick-actions {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
  }
  
  .action-card {
    background: white;
    width: 48%;
    padding: 30rpx;
    border-radius: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .icon-circle {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
  }
  
  .icon-circle.blue {
    background: #EBF5FF;
    color: #3B82F6;
  }
  
  .icon-circle.orange {
    background: #FFF7ED;
    color: #EA580C;
  }
  
  .icon {
    font-size: 40rpx;
  }
  
  .action-text {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    display: block;
    padding-left: 10rpx;
  }
  
  .rec-card {
    background: white;
    padding: 30rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: flex-start;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  }
  
  .rec-icon-box {
    background: #F9FAFB;
    padding: 16rpx;
    border-radius: 16rpx;
    margin-right: 24rpx;
  }
  
  .rec-icon {
    font-size: 32rpx;
  }
  
  .rec-content {
    flex: 1;
  }
  
  .rec-title {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .rec-desc {
    font-size: 26rpx;
    color: #666;
    line-height: 1.4;
  }